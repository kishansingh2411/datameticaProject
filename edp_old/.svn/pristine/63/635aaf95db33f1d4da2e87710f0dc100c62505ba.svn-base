DROP TABLE IF EXISTS ${hivevar:database}.${hivevar:table_prefix}${hivevar:table_name}
;

CREATE EXTERNAL TABLE ${hivevar:database}.${hivevar:table_prefix}${hivevar:table_name}
(    
   ASSET_ID	                        BIGINT  COMMENT 'asset id as generated by the asset management system'
   ,CALL_SIGN	                    VARCHAR(12) COMMENT 'callsign of the channel being recorded'
   ,CALL_SIGN_IND	                VARCHAR(1) COMMENT 'Column value modify indicator'
   ,CREATE_TIME	                    TIMESTAMP COMMENT 'date/time recording was created'
   ,CREATE_TIME_IND	                VARCHAR(1) COMMENT  'Column value modify indicator'
   ,DS_RECTIME	                    TIMESTAMP COMMENT 'rectime in Eastern Time'
   ,DS_RECTIME_IND	                VARCHAR(1) COMMENT  'Column value modify indicator'
   ,DS_STARTTIME	                TIMESTAMP COMMENT 'start_time in Eastern Time'
   ,DS_STARTTIME_IND	            VARCHAR(1) COMMENT  'Column value modify indicator'
   ,DTM_SYSDATE                 	TIMESTAMP COMMENT  ''
   ,DURATION	                    INT COMMENT  'duration of the recording in minutes'
   ,DURATION_IND	                VARCHAR(1) COMMENT  'Column value modify indicator'
   ,ENDTIME_ADJUSTMENT_PREV	        BIGINT COMMENT  ''
   ,ENDTIME_ADJUSTMENT_PREV_IND	    VARCHAR(1) COMMENT  'Column value modify indicator'
   ,ENDTIME_ADUSTMENT	            BIGINT COMMENT  ''
   ,ENDTIME_ADUSTMENT_IND      	    VARCHAR(1) COMMENT  'Column value modify indicator'
   ,HOME_ID	                        VARCHAR(255) COMMENT  ''
   ,KEEP_TYPE_CODE	                VARCHAR(4) COMMENT  ''
   ,KEEP_TYPE_CODE_IND	            VARCHAR(1) COMMENT  'Column value modify indicator'
   ,LAST_UPDATED	                TIMESTAMP COMMENT  ''
   ,LAST_UPDATED_IND	            VARCHAR(1) COMMENT  'Column value modify indicator'
   ,LOADTIME	                    TIMESTAMP COMMENT 'date and time data loaded into the DB'
   ,LOADTIME_IND	                VARCHAR(1) COMMENT  'Column value modify indicator'
   ,MODIFY_TIME	                    TIMESTAMP COMMENT 'date/time the recording was modified'
   ,MODIFY_TIME_IND	                VARCHAR(1) COMMENT  'Column value modify indicator'
   ,OP_TYPE	                        VARCHAR(1) COMMENT  ''
   ,PAUSE_TIME	                    TIMESTAMP COMMENT  'the time of the pause that initiated this temporary recording. this will only be populated for recordings that were saved after a pause action'
   ,PAUSE_TIME_IND	                VARCHAR(1) COMMENT  'Column value modify indicator'
   ,RECORDING_DATE	                TIMESTAMP COMMENT  'date of the recording'
   ,RECORDING_DATE_IND	            VARCHAR(1) COMMENT  'Column value modify indicator'
   ,RECORDING_ID	                BIGINT COMMENT  'unique id of the recording'
   ,RECORDING_LOCKED	            BIGINT COMMENT  'specified whether the recording is locked (parental controls)'
   ,RECORDING_LOCKED_IND	        VARCHAR(1) COMMENT  'Column value modify indicator'
   ,RECORDING_STATUS	            INT COMMENT  'status of the recording - see lookup table for values'
   ,RECORDING_STATUS_IND	        VARCHAR(1) COMMENT  'Column value modify indicator'
   ,RECORDING_TIME	                VARCHAR(8) COMMENT  'Start time of the recording'
   ,RECORDING_TIME_IND	            VARCHAR(1) COMMENT  'Column value modify indicator'
   ,RSDVR_RECORDINGS_DELTA_SEQ	    BIGINT COMMENT  ''
   ,SCHEDULE_ID	                    BIGINT COMMENT  'links to the RSDVR_REQUESTS table'
   ,START_DATE	                    TIMESTAMP COMMENT  'date recording is to start'
   ,START_DATE_IND	                VARCHAR(1) COMMENT  'Column value modify indicator'
   ,START_TIME	                    VARCHAR(8) COMMENT  'time recording is to start'
   ,START_TIME_IND              	VARCHAR(1) COMMENT  'Column value modify indicator'
   ,STARTDATE_STARTTIME	            TIMESTAMP COMMENT  'start date time of the recording'
   ,STARTDATE_STARTTIME_IND	        VARCHAR(1) COMMENT  'Column value modify indicator'
   ,TEMPORARY_ASSET_ID	            BIGINT COMMENT  'temporary asset id that will be used to turn this recording into a permanent one. this will only be populated for recordings that were saved after a pause action'
   ,TEMPORARY_ASSET_ID_IND	        VARCHAR(1) COMMENT  'Column value modify indicator'
)
PARTITIONED BY (LOAD_DATE STRING)
STORED AS ORC
LOCATION '${hivevar:location}'
TBLPROPERTIES ("orc.compress"="SNAPPY")
;

